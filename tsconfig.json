{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es3",
    "module": "commonjs",
    "jsx": "react",
    "isolatedModules": false,
    "moduleResolution": "node",
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true
  },
  "typeRoots": [
    "typings/globals",
    "typings/modules"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "typings/index.d.ts"
  ]
}